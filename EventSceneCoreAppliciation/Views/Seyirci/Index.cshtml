@using EntityLayer
@model List<Seyirci>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="col-11 grid-margin stretch-card">
    <div class="card m-5 overflow-auto" style="box-shadow: rgba(0, 0, 0, 0.15) 0px 5px 15px 0px;">
        <div class="card-body">

            <table class="table">
                <thead>
                    <tr>
                        <th>Kullanıcı Adı</th>
                        <th>Kullanıcı Şifre</th>
                        <th>Kullanici Tür</th>
                        <th>Kullanici Tel</th>
                        <th>Kullanici Mail</th>
                        <th>Kullanici Tc</th>
                        <th>Seyirci Ad</th>
                        <th>Seyirci Soyad</th>
                        <th>Doğum Tarihi</th>
                        <th>Durum</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.kullaniciAd</td>
                            <td>@item.kullaniciSifre</td>
                            <td>@item.kullaniciTur</td>
                            <td>@item.kullaniciTel</td>
                            <td>@item.kullaniciMail</td>
                            <td>@item.kullaniciTc</td>
                            <td>@item.seyirciAd</td>
                            <td>@item.seyirciSoyad</td>
                            <td>@item.dogumTarihi</td>
                            <td>@item.silindi</td>
                            <td>
                                <button type="button" class="btn btn-info" data-whatever="@item.seyirciId" data-toggle="modal" data-target="#decisionPopup"><ion-icon name="trash-sharp"></ion-icon> </button>
                            </td>
                            <td><a href="/Seyirci/guncelle/@item.seyirciId" type="button" class="btn btn-secondary"><ion-icon name="cloud-upload-sharp"></ion-icon></a></td>
                        </tr>
                    }
                </tbody>

            </table>
            <div class="text-center d-flex justify-content-start p-2">
                <a href="/Seyirci/ekle" class="btn btn-warning"><ion-icon name="bag-add-outline" style="font-size:20px;"></ion-icon></a>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="decisionPopup" tabindex="=-1" aria-labelledby="silLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title" id="silLabel">Uyarı</h1>
                <button type="button" class="btn-close" data-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Silmek istediğinizden emin misiniz?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Hayır</button>
                <a id="delete-btn" href="" class="btn btn-success">Evet</a>
            </div>
        </div>
    </div>
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        $('#decisionPopup').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget);
            var seyirciId = button.attr('data-whatever');
            console.log(seyirciId);
            var a = document.querySelector("#delete-btn");
            a.href = "/Seyirci/sil/" + seyirciId
        });
    });
</script>