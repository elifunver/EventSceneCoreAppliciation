@using EntityLayer
@model Seyirci

@{
    ViewData["Title"] = "Guncelle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="col-11 grid-margin stretch-card">
    <div class="card m-5" style="box-shadow: rgba(0, 0, 0, 0.15) 0px 5px 15px 0px;">
        <div class="card-body">
            <h3>Seyirci Güncelle</h3>

            @using (Html.BeginForm("Guncelle", "Seyirci", FormMethod.Post, new { @class = "form-group" }))
            {
                @Html.TextBox("seyirciId", "" ,new { @class = "form-control",@name="seyirciId",@value="@Model.seyirciId", @type="hidden"})

                @Html.Label("Kullanıcı Adı")
                @Html.TextBox("kullaniciAd",Model.kullaniciAd,new { @class = "form-control" })
                @Html.ValidationMessage("kullaniciAd",new { @class ="text-danger" })
                <br />

                @Html.Label("Kullanici Şifre")
                @Html.TextBox("kullaniciSifre",Model.kullaniciSifre,new { @class = "form-control",@name="kullaniciSifre" })
                @Html.ValidationMessage("kullaniciSifre",new { @class ="text-danger" })
                <br />

                @Html.Label("Kulanici Tür")
                @Html.TextBox("kullaniciTur",Model.kullaniciTur,new { @class = "form-control", @name="kullaniciTur" })
                @Html.ValidationMessage("kullaniciTur",new { @class ="text-danger" })
                <br />

                @Html.Label("Kulanici Tel")
                @Html.TextBox("kullaniciTel",Model.kullaniciTel,new { @class = "form-control", @name="kullaniciTel" })
                @Html.ValidationMessage("kullaniciTel",new { @class ="text-danger" })
                <br />

                @Html.Label("Kulanici Mail")
                @Html.TextBox("kullaniciMail",Model.kullaniciMail,new { @class = "form-control", @name="kullaniciMail" })
                @Html.ValidationMessage("kullaniciMail",new { @class ="text-danger" })
                <br />

                @Html.Label("Kulanici Tc")
                @Html.TextBox("kullaniciTc",Model.kullaniciTc,new { @class = "form-control", @name="kullaniciTc" })
                @Html.ValidationMessage("kullaniciTc",new { @class ="text-danger" })
                <br />

                @Html.Label("Seyirci Adı")
                @Html.TextBox("seyirciAd",Model.seyirciAd,new { @class = "form-control", @name="seyirciAd" })
                @Html.ValidationMessage("seyirciAd",new { @class ="text-danger" })
                <br />

                @Html.Label("Seyirci Soyadı")
                @Html.TextBox("seyirciSoyad",Model.seyirciSoyad,new { @class = "form-control", @name="seyirciSoyad" })
                @Html.ValidationMessage("seyirciSoyad",new { @class ="text-danger" })
                <br />

                @Html.Label("Seyirci Doğum Tarihi")
                @Html.TextBox("dogumTarihi","",new { @class = "form-control", @name="dogumTarihi",@value="@Model.dogumTarihi" })
                @Html.ValidationMessage("dogumTarihi",new { @class ="text-danger" })
                <br />

                @Html.Label("Durum")
                <select class="form-control" name="silindi">
                    <option value="False">False</option>
                    <option value="True">True</option>
                </select>
                <br />

                <input class="form-control btn btn-primary" type="submit" value="Seyirci Güncelle" />
            }
        </div>
    </div>
</div>