@using EntityLayer
@model Salon

@{
    ViewData["Title"] = "Ekle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="col-11 grid-margin stretch-card">
    <div class="card m-5" style="box-shadow: rgba(0, 0, 0, 0.15) 0px 5px 15px 0px;">
        <div class="card-body">

            <h3>Salon Ekle</h3>

            @using (Html.BeginForm("Ekle", "Salon", FormMethod.Post, new { @class = "form-group" }))
            {
                @Html.Label("Salon Adı")
                @Html.TextBox("salonAd","",new { @class = "form-control" })
                @Html.ValidationMessage("salonAd",new { @class ="text-danger" })
                <br />

                @Html.Label("Salon Kapasitesi")
                @Html.TextBox("kapasite","",new { @class = "form-control" })
                @Html.ValidationMessage("kapasite",new { @class ="text-danger" })
                <br />

                @Html.Label("Durum")
                <select class="form-control" name="silindi">
                    <option value="False">Aktif</option>
                    <option value="True">Pasif</option>
                </select>
                <br />

                <input class="form-control btn btn-primary" type="submit" value="Salon Ekle" />
            }
        </div>
    </div>
</div>