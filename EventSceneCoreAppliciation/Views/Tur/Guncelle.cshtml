@using EntityLayer;
@model EtkinlikTurModel;

@{
    ViewData["Title"] = "Guncelle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-11 grid-margin stretch-card">
    <div class="card m-5" style="box-shadow: rgba(0, 0, 0, 0.15) 0px 5px 15px 0px;">
        <div class="card-body">
<h3>Tür Güncelle</h3>
@using (Html.BeginForm("Guncelle", "Tür", FormMethod.Post, new { @class = "form-group" }))
{
   
    @Html.Label("Tür Adı")
    @Html.TextBox("turAd","",new { @class = "form-control" })
    @Html.ValidationMessage("turAd",new { @class ="text-danger" })
    <br />
    @Html.Label("Durum")
    <select class="form-control" name="silindi">
        <option value="False">False</option>
        <option value="True">True</option>
    </select>
    <br />

    <input class="form-control btn btn-primary" type="submit" value="Tür Güncelle" />
}
</div>
</div>
</div>
