@using EntityLayer
@model List<Bilet>;

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="col-11 grid-margin stretch-card">
    <div class="card m-5" style="box-shadow: rgba(0, 0, 0, 0.15) 0px 5px 15px 0px;">
        <div class="card-body">
   
        <h2>Biletler</h2>

        <table class="table">

            <thead>
                <tr>
                    <th>Seri No</th>
                    <th>Ödeme Tipi</th>
                    <th>Bilet Kesim Tarihi</th>
                    <th>Seyirci Ad</th>
                    <th>Seyirci Soyad</th>
                    <th>Seyirci Tc</th>
                    <th>Seans Saat</th>
                    <th>Seyirci Ad</th>
                    <th>Durum</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.seriNo</td>
                        <td>@item.odemeTipi</td>
                        <td>@item.biletKesimTarihi</td>
                        <td>@item.seyirciAd</td>
                        <td>@item.seyirciSoyad</td>
                        <td>@item.seyirciTc</td>
                        <td>@item.seans.saat - @item.seans.tarih </td>
                        <td>@item.seyirci.seyirciAd</td>
                        <td>@item.silindi</td>
                        <td>
                            <button type="button" class="btn btn-outline-danger  text-center" data-bs-whatever="@item.biletId" data-bs-toggle="modal" data-bs-target="#decisionPopup"><i class="fas fa-trash"></i></button>
                        </td>
                        <td><a href="/Bilet/guncelle/@item.biletId" type="button" class="btn btn-outline-primary p-2 ">Güncelle</a></td>
                    </tr>
                }
            </tbody>

        </table>
        <div class="text-center d-flex justify-content-start p-2">
            <a href="/Bilet/ekle" class="btn btn-info"><ion-icon name="add" style=" font-size:30px;"></ion-icon></a>
        </div>
    </div>
</div>

<!-- Modal -->
@*#decisionPopup Model*@
<div class="modal fade" id="decisionPopup" tabindex="=-1" aria-labelledby="silLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title" id="silLabel">Uyarı</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Silmek istediğinizden emin misiniz?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hayır</button>
                <a id="delete-btn" href="" class="btn btn-success">Evet</a>
            </div>
        </div>
    </div>
</div>
</div>


<script>
    $(document).ready(function () {
        $('#decisionPopup').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget);
            var biletId = button.attr('data-bs-whatever');
            console.log(biletId);
            var a = document.querySelector("#delete-btn");
            a.href = "/Bilet/sil/" + biletId;
        });
    });
</script>